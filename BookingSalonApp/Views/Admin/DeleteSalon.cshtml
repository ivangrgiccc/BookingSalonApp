@model BookingSalonApp.Models.Salon
<h1>Delete Salon</h1>
<p>Are you sure you want to delete the salon <strong>@Model.Name</strong>?</p>
<form asp-action="DeleteSalon" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Salons" class="btn btn-secondary">Cancel</a>
</form>
