@model IEnumerable<BookingSalonApp.Models.Salon>
<h1>Manage Salons</h1>
<a asp-action="CreateSalon" class="btn btn-primary">Add New Salon</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Address</th>
            <th>Working Hours</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.Name</td>
                <td>@salon.Location</td>
                <td>@salon.Address</td>
                <td>@salon.WorkingHours</td>
                <td>
                    <a asp-action="EditSalon" asp-route-id="@salon.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteSalon" asp-route-id="@salon.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
