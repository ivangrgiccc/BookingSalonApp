@model BookingSalonApp.Models.Salon
@{
    ViewData["Title"] = "Uredi salon";
}
<h1>Uredi salon</h1>

@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <div class="text-center mb-4">
        <img src="~/Images/@System.IO.Path.GetFileName(Model.ImagePath)" alt="Salon Slika" class="salon-image">
    </div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" required />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkingHours"></label>
        <input asp-for="WorkingHours" class="form-control" required />
        <span asp-validation-for="WorkingHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nova slika</label>
        <input type="file" name="logoFile" class="form-control" />
    </div>

    <div class="mt-4">
        <h3 class="text-dark">Find Us Here:</h3>
        <div style="width: 100%">
            <iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                    src="@Model.GoogleMapsIframe" allowfullscreen>
            </iframe>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Spremi promijene</button>
    </div>
</form>

<div asp-validation-summary="All" class="text-danger"></div>

<style>
    body {
        background-image: url('https://static.vecteezy.com/system/resources/previews/006/897/001/non_2x/professional-equipment-for-hairdressing-salon-hair-stylist-tools-horizontal-seamless-pattern-linear-icons-haircut-hair-coloring-golden-outline-on-a-black-background-for-printing-banners-vector.jpg');
        background-size: cover;
        background-position: center;
    }

    .salon-image {
        max-width: 300px;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }
</style>
