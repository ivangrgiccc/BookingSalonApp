@model BookingSalonApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card">
        <h2 class="text-center mb-4">Dobrodosao natrag!</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control custom-input" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Lozinka</label>
                <input asp-for="Password" type="password" class="form-control custom-input" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check custom-checkbox">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Zapamti me</label>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Prijavi se</button>
        </form>

        <div asp-validation-summary="All" class="text-danger mt-3"></div>
    </div>
</div>

<style>
    body {
        background: #f0f0f5;
        font-family: 'Arial', sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

        .login-card h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 25px;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 14px;
        color: #555;
    }

    .form-control {
        height: 45px;
        border-radius: 25px;
        border: 1px solid #ddd;
        padding: 0 15px;
        font-size: 16px;
        background-color: #f9f9f9;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 5px rgba(0, 86, 179, 0.3);
        }

    .form-check-input {
        width: 20px;
        height: 20px;
        margin-right: 10px;
    }

    .form-check-label {
        font-size: 14px;
        color: #555;
    }

    .btn {
        background-color: #0056b3;
        color: white;
        border: none;
        border-radius: 25px;
        height: 45px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            background-color: #004085;
            cursor: pointer;
        }

   
    
</style>
