@{
    ViewData["Title"] = "Neovlašteni pristup";
}

<div class="access-denied-container">
    <div class="access-denied-card text-center">
        <div class="access-denied-icon">
            <i class="fas fa-ban fa-5x"></i>
        </div>
        <h1 class="access-denied-title">Pristup odbijen</h1>
        <p class="access-denied-message">Nemate dopuštenje za pristup ovoj stranici.</p>
        <a href="/" class="btn btn-primary btn-lg">Povratak na početnu</a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .access-denied-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 20px;
    }

    .access-denied-card {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    .access-denied-icon {
        color: #dc3545;
        margin-bottom: 20px;
    }

    .access-denied-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 10px;
    }

    .access-denied-message {
        font-size: 1.25rem;
        color: #6c757d;
        margin-bottom: 30px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
