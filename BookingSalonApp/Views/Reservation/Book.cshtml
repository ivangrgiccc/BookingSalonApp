@model BookingSalonApp.Models.BookingViewModel

@{
    var services = ViewBag.Services as List<BookingSalonApp.Models.Service> ?? new List<BookingSalonApp.Models.Service>();
    var employees = ViewBag.Employees as List<BookingSalonApp.Models.Employee> ?? new List<BookingSalonApp.Models.Employee>();
}
<h1>Book an Appointment</h1>
<form asp-action="Book" method="post">
    <div>
        <label>Choose Services:</label>
        <ul>
            @foreach (var service in services)
            {
                <li>
                    <input type="checkbox" name="SelectedServices" value="@service.Id" />
                    @service.Name - @service.Price.ToString("C")
                </li>
            }
        </ul>
    </div>
    <div>
        <label>Choose Employee:</label>
        <select name="EmployeeId" class="form-select" required>
            <option value="">-- Select an Employee --</option>
            @foreach (var employee in employees)
            {
                <option value="@employee.Id">@employee.Name</option>
            }
        </select>
    </div>
    <div>
        <label>Date and Time:</label>
        <input type="datetime-local" name="Date" class="form-control" required />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Confirm</button>
    </div>
</form>
<div asp-validation-summary="All" class="text-danger"></div>
